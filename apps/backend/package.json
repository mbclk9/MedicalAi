{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx --env-file=../../.env src/index.ts",
    "build": "npm run db:push --workspace=@repo/db && esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --external:pg-native",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development node dist/index.js",
    "vercel-build": "npm run build",
    "db:push": "cd ../../packages/db && npm run db:push",
    "db:studio": "cd ../../packages/db && npm run db:studio",
    "db:generate": "cd ../../packages/db && npm run db:generate",
    "db:seed": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.37.0",
    "@deepgram/sdk": "^4.7.0",
    "@repo/db": "file:../../packages/db",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "memorystore": "^1.6.7",
    "multer": "^2.0.1",
    "nanoid": "^5.1.5",
    "openai": "^5.8.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "vite": "^5.4.19",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.13",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}