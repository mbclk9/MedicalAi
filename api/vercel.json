{
  "version": 2,
  "buildCommand": "cd apps/frontend && npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "apps/frontend/dist",
  
  "functions": {
    "apps/frontend/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/frontend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/dist/index.html"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
