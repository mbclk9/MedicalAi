{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "ANTHROPIC_API_KEY",
        "DEEPGRAM_API_KEY", 
        "OPENAI_API_KEY"
      ]
    },
    "frontend#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "VITE_API_BASE_URL"
      ]
    },
    "backend#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "ANTHROPIC_API_KEY",
        "DEEPGRAM_API_KEY", 
        "OPENAI_API_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}