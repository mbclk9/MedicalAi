{
  "version": 2,
  "builds": [
    {
      "src": "apps/backend/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["apps/backend/dist/**"]
      }
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/backend/dist/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/apps/frontend/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/dist/index.html"
    }
  ],
  "functions": {
    "apps/backend/dist/index.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}