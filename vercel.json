{
  "builds": [
    {
      "src": "apps/frontend/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "apps/frontend/dist"
      }
    },
    {
      "src": "apps/backend/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/backend/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/frontend/dist/index.html"
    }
  ]
} 