{
  "version": 2,
  "buildCommand": "turbo run build",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "apps/frontend/dist",
  
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],

  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/dist/index.html"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  },

  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}